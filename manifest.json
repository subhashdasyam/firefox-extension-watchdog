{
  "manifest_version": 2,
  "name": "Extension Watchdog",
  "version": "0.1.1",
  "description": "Lists installed extensions and alerts when new ones are added.",
  "permissions": ["management", "storage", "<all_urls>"],
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "browser_action": {
    "default_title": "Extension Watchdog",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon-16.svg",
      "32": "icons/icon-32.svg",
      "64": "icons/icon-64.svg"
    }
  },
  "icons": {
    "32": "icons/icon-32.svg",
    "48": "icons/icon-48.svg",
    "64": "icons/icon-64.svg",
    "96": "icons/icon-96.svg",
    "128": "icons/icon-128.svg"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "extension-watchdog@s3c.in",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  }
}
