{
  "manifest_version": 2,
  "name": "Extension Watchdog",
  "version": "0.1.0",
  "description": "Lists installed extensions and alerts when new ones are added.",
  "permissions": ["management", "storage", "<all_urls>"],
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "browser_action": {
    "default_title": "Extension Watchdog",
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icons/icon.svg"
    }
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "extension-watchdog@s3c.in",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  }
}
